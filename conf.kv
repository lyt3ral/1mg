<ContentNavigationDrawer>

    MDList:

        OneLineListItem:
            text: "Home"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "scr 1"

        OneLineListItem:
            text: "Analyse Image"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "scr 2"

        OneLineListItem:
            text: "OCR/Translate"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "scr 3"

        OneLineListItem:
            text: "VirusTotal Scan"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.current = "scr 4"


MDScreen:

    MDTopAppBar:
        pos_hint: {"top": 1}
        elevation: 4
        title: "1mg"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:

        MDScreenManager:
            id: screen_manager

            MDScreen:
                name: "scr 1"

                MDLabel:
                    text: "Home"
                    halign: "center"
                

            MDScreen:
                name: "scr 2"
                MDBoxLayout:
                    id: box
                    spacing: "56dp"
                    adaptive_size: True
                    pos_hint: {"center_x": .5, "center_y": .5}
            MDScreen:
                name: "scr 3"
                MDLabel:
                    text: "OCR"
                    halign: "center"
                

            MDScreen:
                name: "scr 4"

                MDLabel:
                    text: "Virustotal"
                    halign: "center"

        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 16, 16, 0)

            ContentNavigationDrawer:
                screen_manager: screen_manager
                nav_drawer: nav_drawer
